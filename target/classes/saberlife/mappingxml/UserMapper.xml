<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="saberlife.dao.UserDao" >
    <resultMap id="user" type="saberlife.pojo.UserPOJO" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="companyname" property="companyname" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="userlist" >
        id, username, password, companyname
    </sql>
    <select id="selectUserMessage" resultMap="user" parameterType="String" >
        SELECT
        <include refid="userlist" />
        FROM user
        WHERE username = #{username,jdbcType=VARCHAR}
    </select>
     
</mapper>